<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C (%F:%L) - %m%n"/>
    </Console>
    <RollingFile name="RollingFile" fileName="${sys:user.home}/logs/sys-web.log"
                     filePattern="${sys:user.home}/logs/sys-web-%d{yyyy-MM-dd}-%i.log">
       <PatternLayout>
         <Pattern>%d %-5p [%t] %C (%F:%L) - %m%n</Pattern>
       </PatternLayout>
       <Policies>
         <TimeBasedTriggeringPolicy />
         <SizeBasedTriggeringPolicy size="250 MB"/>
       </Policies>
       <DefaultRolloverStrategy max="20"/>
     </RollingFile>
    <Async name="ASYNC">
      <AppenderRef ref="RollingFile"/>
      <AppenderRef ref="STDOUT"/>
    </Async>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="RollingFile"/>
      <AppenderRef ref="STDOUT"/>
    </Root>
      <logger name="com.x.centra" additivity="true">
          <level value="info" />
      </logger>
  </Loggers>
</Configuration>